{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna clean -y && lerna bootstrap --hoist",
    "start": "multiview [npm run app] [npm run admin] [npm run gem]",
    "admin": "lerna run dev:admin --stream --no-prefix",
    "app": "lerna run dev:app --stream --no-prefix",
    "gem": "lerna run dev:gem --stream --no-prefix",
    "xplay": "lerna run dev:xplay --stream --no-prefix",
    "list": "# use 'npm run admin | app | gem | xplay'",
    "list:global": "npm list -g --depth=0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "lerna": "^3.20.2",
    "multiview": "^3.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "ip": "^1.1.5",
    "minimist": "^1.2.5",
    "shelljs": "^0.8.3"
  }
}
