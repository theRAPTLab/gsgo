{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna clean -y && lerna bootstrap --hoist",
    "audit": "lerna bootstrap && lerna-audit",
    "build": "lerna run build",
    "start": "npm run build && multiview [npm run gem:multi] [npm run admin:multi]",
    "ursys": "cd gs_packages/ursys/ && npm run local",
    "gem:multi": "npm run build && lerna run dev:gem --stream --no-prefix",
    "gem": "npm run build && cd gs_packages/gem-srv/ && npm run local",
    "admin:multi": "npm run build && lerna run dev:admin --stream --no-prefix",
    "admin": "npm run build && cd gs_packages/admin-srv/ && npm run local",
    "xplay": "npm run build && lerna run dev:xplay --stream --no-prefix",
    "list": "# use 'npm run admin | gem | xplay'",
    "list:global": "npm list -g --depth=0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.2.0",
    "multiview": "^3.0.1",
    "prettier": "^2.0.5",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "fs-extra": "^8.1.0",
    "ip": "^1.1.5",
    "minimist": "^1.2.5",
    "shelljs": "^0.8.3"
  }
}
