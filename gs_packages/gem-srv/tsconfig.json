{
  "include": ["src/**/*.ts", "src/**/*.tsx", "gem_run.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "src",
    "paths": {
      "config/*": ["../config/*"],
      "static/*": ["./app/static/*"],
      "app/*": ["./app/*"],
      "script/*": ["./modules/sim/script/*"],
      "tests/*": ["./modules/tests/*"],
      "modules/*": ["./modules/*"],
      "lib/*": ["./lib/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
