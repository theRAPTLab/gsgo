{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "config/*": ["../config/*"],
      "script/*": ["./modules/sim/script/*"],
      "app/*": ["./app/*"],
      "lib/*": ["./lib/*"],
      "modules/*": ["./modules/*"],
      "static/*": ["./app/static/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "gem_run.js"],
  "exclude": ["node_modules"]
}
