{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {},
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "server"],
  "exclude": ["node_modules"]
}
